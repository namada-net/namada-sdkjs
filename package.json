{
  "name": "namada",
  "version": "0.20.7",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prebuild": "node -p \"'export const NAMADA_LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > packages/lib/src/version.ts",
    "prepare": "husky install",
    "ts:web": "cd packages/sdk && tspc -p tsconfig.json",
    "ts:web:multicore": "cd packages/sdk-multicore && tspc -p tsconfig.json",
    "ts:node": "tspc -p packages/sdk-node/tsconfig.json",
    "copy:web": "node ./scripts/copy.mjs",
    "copy:web:multicore": "node ./scripts/copy.mjs -t multicore",
    "copy:node": "node ./scripts/copy.mjs -t node",
    "build:sdk": "yarn prebuild && yarn wasm:ts:web && yarn wasm:build && yarn ts:web && yarn copy:web",
    "build:sdk:multicore": "yarn prebuild && yarn wasm:ts:web && yarn wasm:build:multicore && yarn ts:web:multicore && yarn copy:web:multicore",
    "build:sdk:node": "yarn prebuild && yarn wasm:ts:node && yarn wasm:build:node && yarn ts:node && yarn copy:node",
    "build:sdk:dev": "yarn prebuild && yarn wasm:ts:web && yarn wasm:build:dev && yarn ts:web && yarn copy:web",
    "build:sdk:multicore:dev": "yarn prebuild && yarn wasm:ts:web && yarn wasm:build:dev:multicore && yarn ts:web:multicore && yarn copy:web:multicore",
    "build:sdk:node:dev": "yarn prebuild && yarn wasm:ts:node && yarn wasm:build:node:dev && yarn ts:node && yarn copy:node",
    "build:docs": "cd packages/lib && yarn build:docs",
    "wasm:check": "cd ./crate && cargo check && cargo clippy",
    "wasm:ts:node": "tspc -p tsconfig.lib.node.json",
    "wasm:ts:web": "tspc -p tsconfig.lib.web.json",
    "wasm:build": "yarn wasm:ts:web && node ./scripts/build.mjs --release",
    "wasm:build:multicore": "yarn wasm:ts:web && node ./scripts/build.mjs --release --multicore",
    "wasm:build:dev": "yarn wasm:ts:web && node ./scripts/build.mjs",
    "wasm:build:dev:multicore": "yarn wasm:ts:web && node ./scripts/build.mjs --multicore",
    "wasm:build:node": "yarn wasm:ts:node && node ./scripts/build.mjs --target nodejs --release",
    "wasm:build:node:dev": "yarn wasm:ts:node && node ./scripts/build.mjs --target nodejs"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^8.57.0",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-patch": "^3.1.2",
    "typescript": "5.5.4",
    "wsrun": "^5.2.4"
  },
  "packageManager": "yarn@4.6.0"
}
