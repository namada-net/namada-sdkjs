{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/tests"
  ],
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM",
      "ES2022.Error"
    ],
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "ES2022",
    "outDir": "dist/lib/esm",
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    // "moduleResolution": "Node16",
    "moduleResolution": "bundler",
    "jsx": "react",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
